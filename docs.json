      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/hacktronai",
      "discord": "https://discord.gg/eRHCHsvDKh",
      "github": "https://github.com/HacktronAI",
      "linkedin": "https://linkedin.com/company/hacktron"
    }
  }
