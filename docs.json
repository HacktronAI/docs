  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index"]
          },
          {
            "group": "Resources",
            "pages": ["privacy", "security"]
          }
        ]
      },
      {
        "tab": "CLI Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["cli/overview", "cli/quickstart"]
          },
          {
            "group": "Reference",
            "pages": ["cli/agents", "cli/sessions", "cli/shell"]
          },
          {
            "group": "Resources",
            "pages": ["cli/changelog"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://hacktron.ai/blog",
          "icon": "newspaper"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/eRHCHsvDKh",
          "icon": "discord"
        },
        {
          "anchor": "Trust Center",
          "href": "https://trust.hacktron.ai",
          "icon": "shield"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "thumbnails": {
    "appearance": "dark"
  },
  "background": {},
  "navbar": {
    "links": [
      {
        "label": "Support",
