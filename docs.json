{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Hacktron Docs",
  "colors": {
    "primary": "#060000",
    "light": "#FDF6E3",
    "dark": "#FDF6E3"
  },
  "fonts": {
    "body": {
      "family": "Inter"
    },
    "heading": {
      "family": "Titillium Web"
    }
  },
  "banner": {
    "content": "ðŸš€ The Hacktron CLI is now in private beta. Get early access by [joining the waitlist](https://app.hacktron.ai).",
